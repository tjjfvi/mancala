
.intro
	display flex

	& > div
		display flex
		flex-direction column

		border 5px solid $grey
		padding 10px
		width 400px
		height 400px

		&:first-child
			border-radius 10px 0px 0px 10px
			border-right-width 2.5px

		&:last-child
			border-radius 0px 10px 10px 0px
			border-left-width 2.5px

		& > h1
			color $white
			font-weight 300
			font-size 20px
			text-align center

		&.join
			padding-left 0
			padding-right 0
			h1
				border-bottom 2px solid $grey
				margin-bottom 0
				padding-bottom 20px
			.game
				display flex
				justify-content space-between
				align-items center
				color $lightgrey

				padding 10px
				border-bottom 2px solid $grey

				&:not(.pswd) input
					display none


				& input
				& button
					background-color $black
					border 2px solid $grey
					border-radius 7.5px
					text-align center

					color $lightgrey
					font-size 15px

					height 30px
					width 125px

					padding 3px

					transition color .2s, border .2s

					&.wrong
						border-color: $red

				& button
					width 100px
					cursor pointer

					font-size 17.5px

					&:hover
						color $white
						border-color $lightgrey


		&.host
			justify-content center

			& label
				color $lightgrey
				display flex
				justify-content space-between
				align-items center

				& i
					color $grey

				& input
					background-color $black
					border 3px solid $grey
					border-radius 10px

					color $white
					text-align center;
					font-size 20px

					height 40px
					margin 4px
					padding 2px

			& button
				background-color $black
				border 3px solid $grey
				border-radius 20px
				cursor pointer

				color $lightgrey
				font-size 22.5px

				height 50px
				margin-top 7px

				transition color .2s, border .2s

				&:hover
					color $white
					border-color $lightgrey
